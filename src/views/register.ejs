<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <main>
        <section class="content-form">
            <form method="POST" action="/user/register" class="data-form" enctype="multipart/form-data">
                <h1 class="text-center">Iniciar Sesion</h1>
                <div class="mb-2">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= locals.oldData && oldData.name? oldData.name : ""%>">
                    <% if(locals.errors && errors.name){%>
                        <small style="color: red;">
                            <%= errors.name.msg %>
                        </small>
                    <% } %> 
                </div>
                <div class="mb-2">
                    <label for="lastName" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= locals.oldData && oldData.lastName? oldData.lastName: "" %>">
                    <% if(locals.errors && errors.lastName){%>
                        <small style="color: red;">
                            <%= errors.lastName.msg %>
                        </small>
                    <% } %> 
                </div>
                <div class="mb-2">
                    <label for="userName" class="form-label">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="userName" name="userName" value="<%= locals.oldData && oldData.userName? oldData.userName : "" %>">
                    <% if(locals.errors && errors.userName){%>
                    <small style="color: red;">
                        <%= errors.userName.msg %>
                    </small>
                    <% } %> 
                </div>
                <div class="mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= locals.oldData && oldData.email? oldData.email : "" %>">
                    <% if(locals.errors && errors.email){%>
                        <small style="color: red;">
                            <%= errors.email.msg %>
                        </small>
                    <% } %> 
                </div>
                <div class="mb-2">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password">
                    <% if(locals.errors && errors.password){%>
                    <small style="color: red;">
                        <%= errors.password.msg %>
                    </small>
                    <% } %>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Imagen</label>
                    <input class="form-control" type="file" id="image" name="image">
                </div>
                <div class="d-flex flex-column align-items-center">
                    <button type="submit" class="btn btn-primary mb-2" ><a href="/user/account"></a>Registrarme</button> 
                    <div>
                        <span>¿Ya tienes cuenta? <a href="/login">Iniciar Sesion</a></span>
                    </div>
                </div>
                
            </form>
        </section>
    </main>


    <%- include('partials/footer') %>
    </body>

</html>